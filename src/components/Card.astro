---
interface Props {
  class?: string;
  colSpan?: string;
  rowSpan?: string;
  [key: string]: any;
}
const { class: className, colSpan = "col-span-1", rowSpan = "row-span-1", ...rest } = Astro.props;
---
<div class={`
  bg-surface border border-border p-6 rounded-xl relative overflow-hidden group
  hover:border-white/20 hover:bg-surface-hover/80 
  transition-all duration-300 ease-out
  hover:shadow-[0_0_30px_-10px_rgba(255,255,255,0.1)]
  active:scale-[0.99]
  flex flex-col justify-between
  ${colSpan} ${rowSpan} ${className}
`} {...rest}>
  <slot />
</div>