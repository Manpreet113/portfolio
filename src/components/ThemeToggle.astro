<button
  id="theme-toggle"
  aria-label="Toggle Theme"
  class="fixed top-6 right-6 z-50 p-2 rounded-full border border-border bg-surface text-text-main hover:border-border-hover transition-all active:scale-95 group"
>
  <div class="relative w-5 h-5 overflow-hidden">
    <svg 
      class="absolute inset-0 w-full h-full transform transition-transform duration-500 rotate-90 dark:rotate-0 opacity-0 dark:opacity-100 scale-0 dark:scale-100" 
      xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
      style="opacity: var(--icon-sun-opacity, 0); transform: var(--icon-sun-transform, rotate(90deg) scale(0));"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
    </svg>
    
    <svg 
      class="absolute inset-0 w-full h-full transform transition-transform duration-500" 
      xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
      style="opacity: var(--icon-moon-opacity, 1); transform: var(--icon-moon-transform, rotate(0deg) scale(1));"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
    </svg>
  </div>
</button>

<script>
  const toggle = document.getElementById('theme-toggle');
  
  const updateIcons = (theme) => {
    const isLight = theme === 'light';
    toggle.style.setProperty('--icon-sun-opacity', isLight ? '1' : '0');
    toggle.style.setProperty('--icon-sun-transform', isLight ? 'rotate(0deg) scale(1)' : 'rotate(90deg) scale(0)');
    toggle.style.setProperty('--icon-moon-opacity', isLight ? '0' : '1');
    toggle.style.setProperty('--icon-moon-transform', isLight ? 'rotate(-90deg) scale(0)' : 'rotate(0deg) scale(1)');
  };

  updateIcons(document.documentElement.getAttribute('data-theme'));

  toggle.addEventListener('click', () => {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    
    document.documentElement.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
    updateIcons(newTheme);
  });
</script>