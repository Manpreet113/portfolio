---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import TechBadge from '../components/TechBadge.astro';
import { getPortfolioData } from '../lib/api';

const { projects, skills, isOffline } = await getPortfolioData();
---

<Layout title="Manpreet | Systems Engineer">
  <main class="max-w-6xl mx-auto p-4 md:p-8 pt-20 animate-fade-in">
    
    <header class="mb-16">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-2 h-2 rounded-full bg-white"></div>
        <span class="text-sm font-mono text-text-muted">SYSTEMS & BACKEND</span>
      </div>
      <h1 class="text-5xl md:text-7xl font-semibold tracking-tight text-white mb-6">
        Manpreet.
      </h1>
      <p class="text-xl text-text-muted max-w-2xl leading-relaxed">
        Building robust infrastructure and high-performance backends.
        Focused on <span class="text-white">Rust</span>, <span class="text-white">Distributed Systems</span>, and <span class="text-white">Platform Engineering</span>.
      </p>
    </header>

    {isOffline && (
      <div class="mb-8 p-4 border border-red-900/50 bg-red-900/10 rounded text-red-200 text-sm font-mono flex items-center gap-3">
        <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
        Back-end services unavailable. Displaying cached/fallback view.
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[280px]">

      <Card colSpan="md:col-span-2">
        <div>
          <h2 class="text-sm font-mono text-text-muted mb-2">01 // PHILOSOPHY</h2>
          <p class="text-lg text-white font-medium">
            "Software should be boring."
          </p>
        </div>
        <div class="mt-auto">
          <p class="text-text-muted leading-relaxed">
            I value predictability over flashiness. My work involves designing systems that are type-safe, observable, and easy to maintain. Currently deep-diving into memory safety and concurrency models.
          </p>
        </div>
      </Card>

      <Card rowSpan="md:row-span-2">
        <h2 class="text-sm font-mono text-text-muted mb-4">02 // ARSENAL</h2>
        <div class="flex flex-wrap gap-2 content-start">
          {skills.map(skill => (
            <TechBadge label={skill.name} />
          ))}
          {skills.length === 0 && (
            <>
              <TechBadge label="Rust" />
              <TechBadge label="Python" />
              <TechBadge label="PostgreSQL" />
              <TechBadge label="Docker" />
              <TechBadge label="Linux" />
              <TechBadge label="Tokio" />
              <TechBadge label="Actix" />
            </>
          )}
        </div>
      </Card>

      <Card>
        <div class="flex justify-between items-start">
            <h2 class="text-sm font-mono text-text-muted">03 // FEATURED</h2>
            <div class="w-2 h-2 rounded-full bg-blue-500"></div>
        </div>
        <div class="mt-auto">
          <h3 class="text-xl text-white font-medium mb-2">NoteHole</h3>
          <p class="text-sm text-text-muted mb-4">Spatial, intent-driven architecture.</p>
          <div class="flex gap-2">
            <TechBadge label="Rust" />
            <TechBadge label="Tauri" />
          </div>
        </div>
      </Card>

      <Card class="bg-white text-black hover:bg-gray-200 border-transparent">
        <h2 class="text-sm font-mono text-gray-500">04 // SOURCE</h2>
        <div class="mt-auto">
          <a href="https://github.com/manpreet113" target="_blank" class="block">
            <h3 class="text-3xl font-bold tracking-tight">GitHub ↗</h3>
            <p class="text-sm text-gray-600 mt-2">View repositories</p>
          </a>
        </div>
      </Card>

      <Card colSpan="md:col-span-3">
        <h2 class="text-sm font-mono text-text-muted mb-6">05 // RECENT WORK</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {projects.slice(0, 2).map(project => (
            <div class="group/item">
              <div class="flex justify-between items-baseline mb-2">
                <h3 class="text-white font-medium group-hover/item:text-blue-400 transition-colors">
                  {project.title}
                </h3>
                <a href={project.github_url} class="text-xs font-mono text-text-muted hover:text-white">VIEW CODE ↗</a>
              </div>
              <p class="text-sm text-text-muted line-clamp-2 mb-3">
                {project.description}
              </p>
              <div class="flex gap-2">
                {project.tech_stack.slice(0, 3).map(t => <TechBadge label={t} />)}
              </div>
            </div>
          ))}
          {projects.length === 0 && (
             <p class="text-text-muted font-mono text-sm">No projects fetched from backend.</p>
          )}
        </div>
      </Card>

    </div>

    <footer class="mt-20 border-t border-border pt-8 flex justify-between items-center text-sm text-text-muted font-mono">
      <div>
        &copy; {new Date().getFullYear()} Manpreet.
      </div>
      <div class="flex gap-6">
        <a href="mailto:manpreet10542@gmail.com" class="hover:text-white transition-colors">Email</a>
        <a href="https://linkedin.com/in/manpreet113" class="hover:text-white transition-colors">LinkedIn</a>
      </div>
    </footer>

  </main>
</Layout>